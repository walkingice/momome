<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_gutter"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            style="@style/about_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_content"
            style="@style/about_content"
            />
        <include
            android:layout_height="@dimen/h_divider_height"
            android:layout_width="match_parent"
            layout="@layout/h_divider"
            android:layout_marginTop="@dimen/small_gutter"
            android:layout_marginBottom="@dimen/small_gutter"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_coworker"
            style="@style/about_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_coworker_desc"
            style="@style/about_content"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_gutter"
            android:src="@drawable/hulu"
            android:scaleType="fitStart"
            />
    </LinearLayout>
</ScrollView>

