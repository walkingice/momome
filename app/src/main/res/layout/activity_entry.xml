<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@drawable/actionbar_bg"
        android:gravity="center_vertical"
        >
        <ViewSwitcher
            android:id="@+id/entry_lt_switcher"
            android:layout_width="@dimen/large_button_size"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/entry_add_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/add"
                    android:textColor="@color/text_aluminium"
                    android:onClick="onClickAddButton"
                    android:padding="10dp"
                    android:background="@drawable/btn_bg"
                    />
                <include
                    android:layout_width="@dimen/v_divider_width"
                    android:layout_height="match_parent"
                    layout="@layout/v_divider"
                    />
            </LinearLayout>
        </ViewSwitcher>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/entry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:text="@string/app_name"
                style="@style/actionbar_title"
                />
        </LinearLayout>
        <include
            android:layout_width="@dimen/v_divider_width"
            android:layout_height="match_parent"
            layout="@layout/v_divider"
            />
        <ViewSwitcher
            android:id="@+id/entry_rt_switcher"
            android:layout_width="@dimen/large_button_size"
            android:layout_height="match_parent"
            android:inAnimation="@android:anim/fade_in"
            android:outAnimation="@android:anim/fade_out"
            >
            <Button
                android:id="@+id/entry_edit_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_aluminium"
                android:background="@drawable/btn_bg"
                android:text="@string/edit"
                android:onClick="onClickEditButton"
                />
            <Button
                android:id="@+id/entry_done_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_aluminium"
                android:background="@drawable/btn_bg"
                android:text="@string/done"
                android:onClick="onClickDoneButton"
                />
        </ViewSwitcher>
    </LinearLayout>
    <ListView
        android:id="@+id/entry_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/list_bg"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/list_divider"
        />
</LinearLayout>

