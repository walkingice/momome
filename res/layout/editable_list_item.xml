<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:gravity="center"
    >
    <ImageView
        android:id="@id/editable_item_btn_edit"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_gutter"
        android:layout_marginLeft="@dimen/default_gutter"
        android:padding="6dp"
        android:src="@drawable/icon_edit"
        android:background="@drawable/btn_bg"
        android:text="Edit"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_gutter"
        android:layout_weight="1"
        >
        <TextView
            android:id="@id/editable_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/item_data"
            />
        <TextView
            android:id="@id/editable_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editable_item_text"
            android:layout_alignLeft="@id/editable_item_text"
            android:layout_marginTop="@dimen/small_gutter"
            android:visibility="gone"
            style="@style/item_comment"
            />
    </RelativeLayout>
    <ImageView
        android:id="@id/editable_item_btn_delete"
        android:layout_width="@dimen/default_button_size"
        android:layout_height="@dimen/default_button_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_gutter"
        android:layout_marginRight="@dimen/default_gutter"
        android:src="@drawable/icon_delete"
        android:scaleType="fitXY"
        android:visibility="gone"
        />
</LinearLayout>

