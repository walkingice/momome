<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="actionbar_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#555753</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="item_data">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#000000</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="item_comment">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#55000000</item>
        <item name="android:maxLines">3</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    <style name="about_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    <style name="about_content">
        <item name="android:textColor">#FFEEEEEE</item>
    </style>
</resources>
